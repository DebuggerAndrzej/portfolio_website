---
export interface Props {
  year: string;
  company: string;
  title: string;
  duration: string;
  details: string;
}
const { year, company, title, duration, details } = Astro.props;
---

<ol class="flex flex-col md-flex-row relative border-l border-stone-200">
  <li class="mb-10 ml-4">
    <div class="absolute w-3 h-3 bg-stone-500 rounded-full mt-1.5 -left-1.5 border border-stone-300"></div>
    <div class="flex flex-row flex-wrap gap-4 justify-start text-xs md:text-sm">
      <div class="transition duration-700 ease-in-out hover:scale-125 hover:translate-x-14">
        <div>
          <span class="inline-block px-2 py-1 font-semibold bg-stone-300/75 roundend-md">
            {year}
          </span>
          <span class="inline-block px-2 py-1 font-semibold bg-stone-200 roundend-md">
            {company}
          </span>
        </div>
        <h3 class="text-base font-semibold text-stone-100">
          {title}
        </h3>
        <div class="my-1 text-sm font-normal leading-none text-stone-500">
          {duration}
        </div>
        <p class="my-2 text-base font-normal text-stone-200">
          {details}
        </p>
      </div>
    </div>
  </li>
</ol>
