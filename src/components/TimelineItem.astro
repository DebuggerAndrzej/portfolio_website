---
export interface Props {
  year: string;
  company: string;
  title: string;
  duration: string;
  details: string;
  additionalInfo: Array<string>;
}
const { year, company, title, duration, details, additionalInfo } = Astro.props;
---

<li class="relative">
  <div class="flex items-center">
    <div class="hidden sm:flex w-5 bg-gray-200 h-0.5 dark:bg-gray-700"></div>
    <div
      class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0"
    >
      <svg
        aria-hidden="true"
        class="w-3 h-3 text-blue-800 dark:text-blue-300"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
          clip-rule="evenodd"></path></svg
      >
    </div>
    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
  </div>
  <div
    class="mt-3 sm:pr-20 group transition duration-700 ease-in-out hover:scale-125 hover:translate-x-5 hover:translate-y-5"
  >
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title} - {company}</h3>
    <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{year} - {duration}</time
    >
    <p class="text-base font-normal dark:text-gray-100">{details}</p>
    <ul class="list-disc list-inside">
      <li class="text-base font-normal text-gray-400 duration-300 ease-in-out opacity-0 group-hover:opacity-100">
        {additionalInfo[0]}
      </li>
      <li class="text-base font-normal text-gray-400 duration-500 ease-in-out opacity-0 group-hover:opacity-100">
        {additionalInfo[1]}
      </li>
      <li class="text-base font-normal text-gray-400 duration-1000 ease-in-out opacity-0 group-hover:opacity-100">
        {additionalInfo[2]}
      </li>
    </ul>
  </div>
</li>
