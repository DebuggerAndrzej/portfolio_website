---
export interface Props {
  title: string;
  imgUrl: string;
  stack: string[];
  link: string;
}
const { title, imgUrl, stack, link } = Astro.props;
---

<a href={link} target="_blank">
  <div
    class="border-2 border-stone-100 rounded-md overflow-hidden transition-all duration-700 ease-in-out hover:scale-125"
  >
    <img src={imgUrl} alt="portfolio" class="w-full h-36 md:h-60 bg-slate-700 border-b-2 border-stone-100" />
    <div class="w-full p-4">
      <h3 class="flex justify-center text-lg md:text-xl text-white mb-2 md:mb-3 font-semibold">{title}</h3>
      <p class="flex flex-wrap gap-2 flex-row items-center justify-center text-xs md:text-sm text-white">
        {
          stack.map((item) => (
            <span class="inline-block px-2 py-1 font-semibold border-2 border-stone-100 rounded-md">{item}</span>
          ))
        }
      </p>
    </div>
  </div>
</a>
